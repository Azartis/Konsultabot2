# Environment Configuration for Konsultabot
# Copy this file to .env and fill in your actual values

# Django Backend Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True

# Google AI Studio API Key
# Get your API key from: https://aistudio.google.com/app/apikey
# IMPORTANT: Get a NEW API key if yours is not working
GOOGLE_API_KEY=your_google_ai_studio_api_key_here

# Application Settings
APP_NAME=Konsultabot
APP_VERSION=1.0.0
DEBUG_MODE=False

# Voice Settings (requires speech_recognition and pyttsx3)
VOICE_ENABLED=True
VOICE_RATE=150
VOICE_VOLUME=0.8

# GUI Settings
THEME_COLOR=#1e3a8a
WINDOW_WIDTH=800
WINDOW_HEIGHT=600

# Database Settings
DATABASE_PATH=konsultabot.db

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# Application Settings (optional)
ONLINE_MODE=true
DEFAULT_LANGUAGE=english

# Network Settings (Update with your local IP)
SERVER_IP=192.168.1.17
SERVER_PORT=8000
